@using TravelTrip.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkimizda</h2>
<a href="/admin/HakkimizdaEkle" class="btn btn-primary">Hakkımızda Ekle</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>FotoUrl</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.FotoUrl</td>
            <td>
                @(item.Aciklama.Length > 200 ? item.Aciklama.Substring(0, 200) : item.Aciklama)
            </td>
            <td><a href="/admin/HakkimizdaSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/admin/HakkimizdaGuncelle/@item.ID" class="btn btn-danger">Güncelle</a></td>

        </tr>
    }
</table>




