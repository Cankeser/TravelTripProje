@using TravelTrip.Models.Siniflar
@model List<Blog>
@foreach (var x in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src=@x.BlogImage alt="" style="width:276px;height:150px;" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd:MM:yyyy")</span>
            <p>@x.Aciklama.Substring(0, 80)</p>
            <p><a href="/blog/blogdetay/@x.Id"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>

}